# -----------------------------
# Azure AI Search
# -----------------------------
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your_azure_search_api_key
INDEX_DOCS=docs-index-name
INDEX_CODE=code-index-name
INDEX_PTRS=ptr-index-name

# -----------------------------
# Retrieval Tuning
# -----------------------------
TOP_AISEARCH_DOC_RESULTS=20
TOP_AISEARCH_CODE_RESULTS=20
TOP_AISEARCH_CODE_RESULTS_PER_REPO=5
TOP_AISEARCH_PTR_RESULTS=50
TOP_AISEARCH_PTR_KNN=200
K_TOP_PTRS=200
PTR_MAX_DOCS_TOTAL=150
PTR_SIMILAR_MAX_PTRS_CONTEXT=150
PTR_SEMANTIC_CONFIG=semconfig
PTR_VECTOR_FIELD=contentVector

# -----------------------------
# Azure OpenAI
# -----------------------------
AZURE_OPENAI_ENDPOINT=https://your-azure-openai-resource.openai.azure.com
AZURE_OPENAI_KEY=your_azure_openai_key
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-06-01

# -----------------------------
# MCP (PTR Summarization flow)
# -----------------------------
MCP_URL=https://your-mcp-endpoint
MCP_USER=your_mcp_username
MCP_PASS=your_mcp_password
MCP_EMAIL=your.email@example.com
